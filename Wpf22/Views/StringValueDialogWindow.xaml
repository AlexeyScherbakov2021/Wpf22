<Window x:Class="Wpf22.Views.StringValueDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf22.Views"
        mc:Ignorable="d"
        Title="StringValueDialogWindow" Height="258" Width="426">
    <DockPanel Margin="10">
        <UniformGrid Rows="1" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="5"
                     ButtonBase.Click="OnButtonClick">
            <Button Content="OK" IsDefault="True" Margin="5,0" Padding="30,5" FontWeight="Bold"/>
            <Button Content="Cancel" IsCancel="True" Margin="5,0" Padding="30,5"/>
        </UniformGrid>
        <TextBlock Text="Сообщение" Name="MessageTextBlock" DockPanel.Dock="Top" Margin="5,10"/>
        <TextBox Name="ValueTextBox"/>
    </DockPanel>
</Window>
